{
  "manifest_version": 2,
  "name": "Crunchyroll Dub Filter",
  "description": "Disable unwanted dubs and sort languages according to your preference",
  "version": "1.0",
  "author": "Dragicafit",
  "permissions": ["storage", "https://beta.crunchyroll.com/"],
  "background": {
    "scripts": ["src/background-scripts/background.bundle.js"]
  },
  "browser_action": {
    "default_title": "Crunchyroll Dub Filter",
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/icons/icon.svg",
      "32": "src/icons/icon.svg"
    }
  },
  "web_accessible_resources": ["src/web-accessible-resources/tab.bundle.js"]
}

{
  "manifest_version": 2,
  "name": "Crunchyroll Dub Filter",
  "description": "Disable unwanted dubs and sort languages according to your preference",
  "version": "1.0",
  "author": "Dragicafit",
  "permissions": ["storage", "https://*.crunchyroll.com/"],
  "web_accessible_resources": ["src/web-accessible-resources/tab.bundle.js"],
  "content_scripts": [
    {
      "matches": [
        "https://static.crunchyroll.com/vilos-v2/web/vilos/player.html*"
      ],
      "js": ["src/content-scripts/crunchyrollVideoPlayerV2.js"],
      "css": ["src/content-scripts/crunchyrollVideoPlayerV2.css"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://beta.crunchyroll.com/*/watch/*",
        "https://beta.crunchyroll.com/*/series/*"
      ],
      "js": ["src/content-scripts/listener.js"],
      "all_frames": false,
      "run_at": "document_start"
    }
  ]
}
